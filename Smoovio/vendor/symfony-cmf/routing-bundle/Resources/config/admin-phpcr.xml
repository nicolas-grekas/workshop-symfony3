<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="cmf_routing.route_admin" class="Symfony\Cmf\Bundle\RoutingBundle\Admin\RouteAdmin">
            <tag name="sonata.admin" manager_type="doctrine_phpcr" group="dashboard.cmf" label_catalogue="CmfRoutingBundle" label="dashboard.label_routing" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>Symfony\Cmf\Bundle\RoutingBundle\Doctrine\Phpcr\Route</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setContentRoot">
                <argument>%cmf_routing.dynamic.persistence.phpcr.content_basepath%</argument>
            </call>

            <call method="setRouteRoot">
                <argument>%cmf_routing.dynamic.persistence.phpcr.admin_basepath%</argument>
            </call>
        </service>

        <service id="cmf_routing.redirect_route_admin" class="Symfony\Cmf\Bundle\RoutingBundle\Admin\RedirectRouteAdmin">
            <tag name="sonata.admin" manager_type="doctrine_phpcr" group="dashboard.cmf" label_catalogue="CmfRoutingBundle" label="dashboard.label_redirect_routing" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>Symfony\Cmf\Bundle\RoutingBundle\Doctrine\Phpcr\RedirectRoute</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setRouteRoot">
                <argument>%cmf_routing.dynamic.persistence.phpcr.admin_basepath%</argument>
            </call>
        </service>

        <service id="cmf_routing.admin_extension.route_referrers" class="Symfony\Cmf\Bundle\RoutingBundle\Admin\Extension\RouteReferrersExtension">
            <tag name="sonata.admin.extension"/>
        </service>

        <service id="cmf_routing.admin_extension.frontend_link" class="Symfony\Cmf\Bundle\RoutingBundle\Admin\Extension\FrontendLinkExtension">
            <tag name="sonata.admin.extension"/>
            <argument type="service" id="cmf_routing.router"/>
            <argument type="service" id="translator"/>
        </service>

    </services>
</container>
